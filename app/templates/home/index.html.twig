{% extends 'base.html.twig' %}

{% block title %}Word Puzzle Game{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        h1 {
            text-align: center;
            color: #333;
        }
        
        .welcome-message {
            text-align: center;
            margin: 20px 0;
            color: #666;
        }
        
        .user-info {
            text-align: right;
            margin-bottom: 20px;
        }
        
        .logout-btn {
            background-color: #dc3545;
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
        }
        
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        
        .feature {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border: 4px solid green;
        }
        
        .feature h3 {
            margin-top: 0;
            color: #333;
        }
        
        .feature p {
            color: #666;
            margin-bottom: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="user-info">
            <span>Welcome, {{ user.username }}!</span>
            <a href="{{ path('app_logout') }}" class="logout-btn">Logout</a>
        </div>
        
        <h1>Word Puzzle Game</h1>
        
        <div class="features">
            {% for puzzle in puzzles %}
             <div class="feature">
                <h3>Puzzle {{ puzzle.id }}</h3>
                
            </div>
            {% endfor %}
            
        </div>
    </div>
{% endblock %} 